{
  "compilerOptions": {
    /* Language and Environment */
    "target": "esnext",

    /* Modules */
    "module": "nodenext",
    "rootDir": "./src",
    "baseUrl": "./",
    "types": ["node"],

    /* Emit */
    "sourceMap": true,
    "outDir": "./.cache",
    "sourceRoot": "./src",
    "inlineSources": true,
    "newLine": "lf",
    "noEmitOnError": true,

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,

    /* Completeness */
    "skipLibCheck": true
  }
}
